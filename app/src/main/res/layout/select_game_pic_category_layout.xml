<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="10dp">

    <com.aquarius.emoticonmemory.view.RoundImageView
        android:id="@+id/normal_type"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/normal_78"/>

    <TextView
        android:layout_below="@+id/normal_type"
        android:layout_alignLeft="@+id/normal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="ac娘"/>

    <com.aquarius.emoticonmemory.view.RoundImageView
        android:id="@+id/magic_type"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@+id/normal_type"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/magic_06"/>

    <TextView
        android:layout_below="@+id/magic_type"
        android:layout_alignLeft="@+id/magic_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="ac魔改"/>

    <com.aquarius.emoticonmemory.view.RoundImageView
        android:id="@+id/colour_type"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@+id/magic_type"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/cai_44"/>

    <TextView
        android:layout_below="@+id/colour_type"
        android:layout_alignLeft="@+id/colour_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="ac彩色"/>


    <com.aquarius.emoticonmemory.view.RoundImageView
        android:id="@+id/overwatch_type"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@+id/colour_type"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/overwatch_07"/>

    <TextView
        android:layout_below="@+id/overwatch_type"
        android:layout_alignLeft="@+id/overwatch_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="ac先锋"/>

</RelativeLayout>